<% include ../partials/header %>

<h1>create profile page</h1>

<div class="container">
	<div class="row">
		<div class="col-lg-8 col-centered">
			<form action="/profiles" method="POST">
				<input class="form-control" type="text" name="firstName" placeholder="First Name" required>
				<input class="form-control" type="text" name="lastName" placeholder="Last Name">
				<input class="form-control" type="text" name="gender" placeholder="Gender">
				<input class="form-control" type="date" name="birthday" placeholder="Birthday">
				<input class="form-control" type="text" name="city" placeholder="City">
				<input class="form-control" type="text" name="state" placeholder="State">
				<input class="form-control" type="text" name="zip" placeholder="zip">
				<button id="ethnicitiesInput" class="form-control" type="button" onclick="addEthnicityInput()">+</button>
				<button id="skillsInput" class="form-control" type="button" onclick="addSkillInput()">+</button>
				<button id="filmsInput" class="form-control" type="button" onclick="addFilmInput()">+</button>
				<button id="phonesInput" class="form-control" type="button" onclick="addPhoneInput()">+</button>
				<button id="emailsInput" class="form-control" type="button" onclick="addEmailInput()">+</button>
				<button id="headshotsInput" class="form-control" type="button" onclick="addHeadshotInput()">+</button>
				<button>Submit</button>
			</form>
		</div>
	</div>
</div>

<script type="text/javascript" src="/scripts/main.js"></script>

<% include ../partials/footer %>