<% include ./partials/header %>

<div class="container">
	<div class="row" style="width: 60%; margin: 25px auto">
		<h1 style="text-align: center">Please Login</h1>
		<form class="form-horizontal" style="margin: 40px 0" action="/login" method="POST">
			<div class="form-group">
				<label for="email" class="control-label col-xs-3">Login:</label>
				<div class="col-xs-9">
					<input type="text" class="form-control" name="email" placeholder="email">
				</div>
			</div>
			<div class="form-group">
				<label for="password" class="control-label col-xs-3">Password:</label>
				<div class="col-xs-9">
					<input type="password" class="form-control" name="password" placeholder="password">
				</div>
			</div>
			<div class="form-group">
				<div class="col-xs-offset-3 col-xs-9">
					<input type="submit" value="login">
				</div>
			</div>
			<div style="text-align: right">
				<a href="/account/forgot">forgot password</a>
			</div>
		</form>
	</div>
</div>

<% include ./partials/footer %>
